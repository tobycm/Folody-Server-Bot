{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",

    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,

    "rootDir": "./",
    "moduleResolution": "node",
    "paths": {
      "*": ["./*"]
    },
    "types": ["bun-types"],
    "importHelpers": true,
    "newLine": "lf",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
